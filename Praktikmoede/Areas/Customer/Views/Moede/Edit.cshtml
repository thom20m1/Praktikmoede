@model Praktikmoede.Models.Moede

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<br />
<form method="post" asp-action="Create">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="topic" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="topic" class="form-control" />
            </div>
            <span asp-validation-for="topic" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="dateFrom" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="dateFrom" class="form-control" />
            </div>
            <span asp-validation-for="dateFrom" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-info form-control" asp-route-id="@Model.Id" value="Update"/>
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<br />
